{
  "expo": {
    "name": "Parada Boa",
    "slug": "paradaboa-app",
    "version": "4.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a4d8f"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seuorg.paradaboa",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Usamos sua localiza\u00e7\u00e3o para mostrar refei\u00e7\u00f5es pr\u00f3ximas.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Precisamos de localiza\u00e7\u00e3o para geofencing de ofertas pr\u00f3ximas.",
        "NSUserTrackingUsageDescription": "Usamos notifica\u00e7\u00f5es para avisar refei\u00e7\u00f5es pr\u00f3ximas."
      }
    },
    "android": {
      "package": "com.seuorg.paradaboa",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#1a4d8f"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "ACCESS_BACKGROUND_LOCATION",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": []
  }
}